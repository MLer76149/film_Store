@model IEnumerable<FilmStore.Models.Genres>
@{
    ViewBag.Title = "Store";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Browse Genres</h3>
<p>
    Select from @Model.Count()
    genres:
</p>
<ul class="iLook">
    @foreach (var genre in Model)
    {
        <li>
            @Html.ActionLink(genre.Name,
            "Browse", new { genre = genre.Name })
        </li>
    }
</ul>
<br />
<br />
<h3>Browse Directors</h3>
<p>
    Select from @ViewBag.menge
    Directors:
</p>
<ul class="iLook">
    @foreach (var regisseure in ViewBag.regisseures)
    {
    <li>
        @Html.ActionLink((string)regisseure.Name, "Browse2", new { regisseures = regisseure.Name })
    </li>
    }
</ul>